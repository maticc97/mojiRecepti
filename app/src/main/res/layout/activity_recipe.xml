<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/recipeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/recipeCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_below="@id/recipeTitle"/>

    <TextView
        android:id="@+id/ingredientsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:text="Sestavine"
        android:textSize="20sp"
        android:layout_below="@id/recipeCategory"/>

    <ListView
        android:id="@+id/ingredientsList"
        android:layout_width="wrap_content"
        android:layout_height="186dp"
        android:layout_below="@id/ingredientsTitle" />

    <TextView
        android:id="@+id/processTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:text="Postopek"
        android:textSize="20sp"
        android:layout_below="@id/ingredientsList"/>

    <TextView
        android:id="@+id/recipeProcess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:layout_below="@id/processTitle"/>

    <ImageButton
        android:id="@+id/editButton"
        style="@style/btn"
        android:background="@drawable/orange_background"
        android:src="@drawable/ic_edit"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:onClick="onEditButtonClick"/>

    <ImageButton
        android:id="@+id/back"
        style="@style/btn"
        android:background="@drawable/orange_background"
        android:src="@drawable/ic_back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onButtonBackClick"/>
</RelativeLayout>